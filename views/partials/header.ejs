<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <form action="/inv/search" method="GET">
    <input type="text" name="keyword" placeholder="Search..." />
    <button type="submit">Search</button>
  </form>
  <div id="tools">
    <% if (locals.loggedin) { %>
    <a class="welcome-link" href="/account"
      >Welcome, <%= locals.accountData.account_firstname %></a
    >
    <br /><br />
    <a class="logout-link" href="/account/logout">Logout</a>
    <% } else { %>
    <a class="account-link" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>
